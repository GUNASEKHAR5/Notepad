package notepad;

import javax.swing.*;
import java.awt.*;

public class Notepad extends JFrame{
	private static final long serialVersionUID = 1L;
	
	Notepad(){
		setTitle("Notepad");
		ImageIcon image = new ImageIcon(getClass().getResource("/notepad/icons/notepad.png"));
		setIconImage(image.getImage());
		
		JMenuBar menubar=new JMenuBar();
		menubar.setBackground(new Color(245,250,249));
		JMenu file=new JMenu("File");
		file.setFont(new Font("AERIAL",Font.PLAIN,20));
		JMenu edit=new JMenu("Edit");
		edit.setFont(new Font("AERIAL",Font.PLAIN,14));
		JMenu view=new JMenu("View");
		view.setFont(new Font("AERIAL",Font.PLAIN,14));
		
		
		menubar.add(file);
		menubar.add(edit);
		menubar.add(view);
		
		
		setJMenuBar(menubar);
		setExtendedState(JFrame.MAXIMIZED_BOTH);	
		setVisible(true);
	}

	public static void main(String[] args) {
		new Notepad();
	}
}