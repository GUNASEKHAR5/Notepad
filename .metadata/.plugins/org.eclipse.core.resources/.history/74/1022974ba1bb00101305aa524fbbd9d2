package notepad;

import java.awt.*;
import javax.swing.*;

public class About extends JFrame {
    private static final long serialVersionUID = 1L;

    public About() {
        setTitle("About CodePad");
        setLayout(null);
        setBounds(400, 150, 600, 500);
        getContentPane().setBackground(new Color(245, 250, 249));

        ImageIcon icon = new ImageIcon(getClass().getResource("/notepad/icons/notepad.png"));
        Image img = icon.getImage().getScaledInstance(120, 120, Image.SCALE_SMOOTH);
        JLabel logo = new JLabel(new ImageIcon(img));
        logo.setBounds(240, 30, 120, 120);
        add(logo);

        JLabel title = new JLabel("CodePad");
        title.setFont(new Font("MONTSERRAT", Font.BOLD, 28));
        title.setForeground(new Color(25, 25, 112));
        title.setBounds(235, 150, 300, 40);
        add(title);

        JLabel description = new JLabel(
            "<html>" +
            "<center>" +
            "<b>CodePad</b> is a lightweight, multi-language text and code editor<br>" +
            "built completely using <b>Java Swing</b>.<br><br>" +
            "It supports multiple file types including <b>.txt, .c, .cpp, .h, .java, and .py</b>.<br>" +
            "You can open, edit, save, and even <b>compile & run</b> your code<br>" +
            "directly through the integrated menu system.<br><br>" +
            "<b>Key Features:</b><br>" +
            "• Multi-tab editor for handling multiple files<br>" +
            "• Quick-run options<br>" +
            "• Integrated Command Prompt execution<br>" +
            "• Supports C, C++, Java, and Python execution<br>" +
            "• Simple and clean UI with keyboard shortcuts<br><br>" +
            "</center>" +
            "</html>"
        );
        description.setFont(new Font("Segoe UI", Font.PLAIN, 15));
        description.setForeground(Color.DARK_GRAY);
        description.setBounds(60, 200, 480, 220);
        add(description);

        JLabel dev = new JLabel("Developed with ❤️  using Java by KUDIMI GUNASEKHAR");
        dev.setFont(new Font("Segoe UI", Font.ITALIC, 13));
        dev.setForeground(new Color(90, 90, 90));
        dev.setBounds(110, 400, 400, 30);
        add(dev);

        JButton close = new JButton("Close");
        close.setFont(new Font("Arial", Font.BOLD, 14));
        close.setBackground(new Color(25, 25, 112));
        close.setForeground(Color.WHITE);
        close.setFocusPainted(false);
        close.setBounds(240, 480, 120, 35);
        close.addActionListener(e -> dispose());
        add(close);

        setResizable(false);
        setVisible(true);
    }
}
